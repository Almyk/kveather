#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import hex kivy.utils.get_color_from_hex

WeatherRoot:

<WeatherRoot>:
    canvas.before:
        Color:
            rgba: hex('#95a5a6')
        Rectangle:
            pos: self.pos
            size: self.size

    #AddLocationForm

<AddLocationForm>:
    orientation: "vertical"
    search_input: search_box
    search_results: search_results_list
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: search_box
            size_hint_x: 50
            focus: True
            multiline: False
            on_text_validate: root.search_location()
        Button:
            text: "Search"
            size_hint_x: 25
            on_press: root.search_location()
        Button:
            text: "Current Location"
            size_hint_x: 25
    ListView:
        id: search_results_list
        adapter:
            ListAdapter(
            data=[],
            cls=main.LocationButton,
            args_converter=main.locations_args_converter)
    Button:
        height: "40dp"
        size_hint_y: None
        text: "Cancel"
        #on_press: app.root.show_current_weather(None)
        on_press: app.root.show_locations()

<Locations@BoxLayout>:
    orientation: "vertical"
    locations_list: locations_list
    ListView:
        id: locations_list
        adapter:
            ListAdapter(
            data=[],
            cls=main.LocationButton,
            args_converter=main.locations_args_converter)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Add Location"
            on_press: app.root.show_add_location_form()
        Button:
            text: "Settings"
            on_press: app.open_settings()

<LocationButton>:
    text: "{} ({})".format(self.location[0], self.location[1])
    height: "40dp"
    size_hint_y: None
    deselected_color: hex(self.col)
    on_press: app.root.show_current_weather(self.location)

<CurrentWeather>:
    orientation: "vertical"
    Label:
        size_hint_y: None
        height: "50"
        padding_y: [0, 25]
        color: 0,0,0,1
        bold: True
        font_size: "30"
        text: "{} ({})".format(root.location[0], root.location[1])
    BoxLayout:
        Label:
            color: 0,0,0,1
            bold: True
            font_size: "20dp"
            text: "Temperature: {}".format(root.temp)
        Label:
            color: 0,0,0,1
            text: root.conditions
    AsyncImage:
        allow_stretch: True
        keep_ratio: True
        source: root.conditions_image
    BoxLayout:
        Label:
            color: 1,0,0,1
            text: "Max Temp: {}".format(root.temp_max)
        Label:
            color: 0,0,1,1
            text: "Min Temp: {}".format(root.temp_min)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Add Location"
            on_press: app.root.show_locations()
        Button:
            text: "Forecast"
